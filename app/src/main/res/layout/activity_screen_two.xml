<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ScreenTwoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B00020"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_5sdp">

        <ImageView
            android:id="@+id/go_back"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_gravity="center|end"
            android:layout_marginStart="@dimen/_5sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:src="@drawable/ic_back_arrow" />

        <EditText
            android:id="@+id/search_no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_edt_background"
            android:layout_marginVertical="@dimen/_5sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_5sdp"
            android:hint="Search Number"
            android:inputType="number"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/black" />


        <ImageView
            android:id="@+id/search_img"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="@dimen/_5sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:src="@drawable/ic_search_icon" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/speed_list_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/empty_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result Not Available"
            android:textSize="@dimen/_16ssp"
            android:layout_gravity="center"
            />

    </FrameLayout>

</LinearLayout>