<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B00020"
        android:paddingVertical="@dimen/_5sdp">

        <ImageView
            android:id="@+id/search_img"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="@dimen/_5sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:src="@drawable/ic_search_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/_5sdp"
            android:text="Internet Speed Test"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/_300sdp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        app:srcCompat="@drawable/main" />


    <ImageView
        android:id="@+id/barImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/bar" />

   </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12ssp"
            android:textColor="#333232"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="-1dp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:text="Download Speed" />

        <TextView
            android:layout_below="@id/download"
            android:id="@+id/uplaod"
            android:textSize="@dimen/_12ssp"
            android:textColor="#333232"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uplaod Speed:"/>

        <TextView
            android:id="@+id/total_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="total speed"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textSize="@dimen/_12ssp"
            android:textColor="#333232"
            android:layout_below="@id/uplaod"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:paddingHorizontal="5dp">

            <EditText
                android:id="@+id/mobile_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text=""
                android:hint="Please Add Mobile No"
                android:inputType="number"
                android:textSize="@dimen/_12ssp"
                android:textColor="#333232" />

            <TextView
                android:id="@+id/select_mobile_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/round_background"
                android:paddingVertical="5dp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="SelectMobileNo"
                android:textSize="@dimen/_12ssp"
                android:textColor="#ffffff" />

        </LinearLayout>


        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_background"
            android:paddingVertical="5dp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="Submit"
            android:layout_marginVertical="@dimen/_20sdp"
            android:textSize="@dimen/_12ssp"
            android:textColor="#ffffff" />


    </LinearLayout>




</LinearLayout>
